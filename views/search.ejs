<div class="author">
    <h1 class="author__heading">Resultats de la recherche</h1>
</div>
<section class="article">

    <ul class="articles_ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <!-- <span>
                        <%= post.summary %>
                    </span> -->

                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>
</section>