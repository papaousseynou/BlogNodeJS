<section class="articles">
    <h2 class="articles__heading">Derniers Posts</h2>



 
    <ul class="articles_ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <!-- <span>
                        <%= post.summary %>
                    </span> -->

                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>

<!-- condition pour afficher le voir plus  -->
    <% if (nextPage !==null) { %>

        <a href="/?page=<%= nextPage %>" class="pagination">&lt; Voir plus</a>

        <% } %>
</section>